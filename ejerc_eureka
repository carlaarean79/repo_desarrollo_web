mport "./styles.css";

let clave = "eureka";
let contador: number = 0;

let claveIngresada = prompt("ingrese su clave");

while (contador <= 3 && claveIngresada !== clave) {
  contador = contador++;
  claveIngresada = prompt("Clave incorrecta");
  if (contador > 3) {
    claveIngresada = prompt("Clave bloqueada");
  } else if (claveIngresada === clave) {
    claveIngresada = prompt("Bienvenido");
  }
  return contador;
}
