const inputPrecioInicial = document.getElementById("precioInicial");

let precioInicial: number = 500;
let descuento: number = 0.1;
let precioConDescuento: number = precioInicial * descuento;
let precioFinal: number = precioInicial - precioConDescuento;

console.log("su precio con descuento es: " precioFinal);
